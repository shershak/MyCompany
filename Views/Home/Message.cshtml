@model MessageItem 
@{
    string strTitle = "Написать администрации сайта";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="" asp-controller="Home" asp-action="Message" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="div-box">
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="div-box">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="div-box">
                <label asp-for="Text"></label>
                <textarea style="width: 500px; height: 150px" asp-for="Text"></textarea>
                <span asp-validation-for="Text"></span>
            </div>
            <input type="submit" style="margin-right: 5px;" value="Отправить" />
        </form>
    </div>
</div>